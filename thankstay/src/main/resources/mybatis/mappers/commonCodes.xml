<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tt.Common.CommonDao">
	<select id="getCommonCodeByCodeContent" parameterType="string" resultType="string">
		SELECT 
			commoncode 	
		FROM	
			thxtay_common_code
		WHERE
			codecontent = #{value}
	</select>
	<select id="getAllCommonCodeVos" resultType="com.tt.vo.CommonCodeVO">
		SELECT 
			commoncode 		as commonCode
			,parentcode		as parentCode
			,codecontent	as codeContent
			,priority		as priority
			,createddate	as createdDate
			,updateddate	as updatedDate
		FROM	
			thxtay_common_code
	</select>
	
	
	<select id="getCommonCodeVosByParentCode" parameterType="string" resultType="com.tt.vo.CommonCodeVO">
		SELECT 
			commoncode
			,parentcode		
			,codecontent	
			,priority		
			,createddate	
			,updateddate	
		FROM	
			thxtay_common_code
		<where>
			<!-- commoncode는 됨 -->
			<!-- Q. 기대값: LDG01을 부모코드로 갖는 LDG0101, 0102, 0103, BUT 아무값도 조회가 안됨, developer에서는 동작 확인-->
			parentcode=#{value}
		</where> 
	</select>
	
</mapper>